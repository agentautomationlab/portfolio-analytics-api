{
  "dashboard": {
    "title": "Portfolio Analytics Dashboard",
    "tags": ["portfolio", "analytics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Page Views",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT COUNT(*) as value FROM \"AnalyticsEvents\" WHERE \"EventType\" = 'pageview' AND \"Timestamp\" >= NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Unique Sessions",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT COUNT(DISTINCT \"SessionId\") as value FROM \"AnalyticsEvents\" WHERE \"Timestamp\" >= NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ]
      },
      {
        "id": 3,
        "title": "Page Views Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT DATE_TRUNC('hour', \"Timestamp\") as time, COUNT(*) as pageviews FROM \"AnalyticsEvents\" WHERE \"EventType\" = 'pageview' AND \"Timestamp\" >= NOW() - INTERVAL '7 days' GROUP BY time ORDER BY time",
            "format": "time_series"
          }
        ]
      },
      {
        "id": 4,
        "title": "Top Pages",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT \"PageUrl\", COUNT(*) as views FROM \"AnalyticsEvents\" WHERE \"EventType\" = 'pageview' AND \"Timestamp\" >= NOW() - INTERVAL '7 days' GROUP BY \"PageUrl\" ORDER BY views DESC LIMIT 10",
            "format": "table"
          }
        ]
      },
      {
        "id": 5,
        "title": "Device Breakdown",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT \"Device\", COUNT(*) as count FROM \"AnalyticsEvents\" WHERE \"Timestamp\" >= NOW() - INTERVAL '7 days' GROUP BY \"Device\"",
            "format": "table"
          }
        ]
      },
      {
        "id": 6,
        "title": "Browser Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT \"Browser\", COUNT(*) as count FROM \"AnalyticsEvents\" WHERE \"Timestamp\" >= NOW() - INTERVAL '7 days' GROUP BY \"Browser\"",
            "format": "table"
          }
        ]
      },
      {
        "id": 7,
        "title": "OS Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT \"Os\", COUNT(*) as count FROM \"AnalyticsEvents\" WHERE \"Timestamp\" >= NOW() - INTERVAL '7 days' GROUP BY \"Os\"",
            "format": "table"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-7d",
      "to": "now"
    }
  }
}
